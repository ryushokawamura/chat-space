.main
  .main__header
    .main__header__left
      .main__header__left__group
        headerleft
      .main__header__left__member
        .main__header__left__member__name
          Member:
          %li.list
            - @group.users.each do |user|
              =user.name
            .main__header__left__member__massage
        
    .main__header__edit
      = link_to edit_group_path(current_user),class:"edit" do 
        Edit
  .main__center
    .messages
      = render @messages
  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new_message__input-box', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'form__submit'



